<%- model_class = Research -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> - <%= @research.description %></h1>
</div>
 

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#goals" class="nav-link" data-toggle="tab">Objetivos</a>
  </li>
  <li class="nav-item">
    <a href="#research-questions" class="nav-link" data-toggle="tab">Questões de pesquisa</a>
  </li>
  <li class="nav-item">
    <a href="#search_strings" class="nav-link" data-toggle="tab">Strings de busca</a>
  </li>
  <li class="nav-item">
    <a href="#criteria" class="nav-link" data-toggle="tab">Cristérios de inclusão e exclusão</a>
  </li>
</ul>

<div class="tab-content">
  <div id="goals" class="tab-pane fade in active">
    coming soon =/
  </div>

  <div id="research-questions" class="tab-pane fade">
    coming soon =/
  </div>

  <div id="search_strings" class="tab-pane fade">
    coming soon =/
  </div>

  <div id="criteria" class="tab-pane fade">
    coming soon =/
  </div>
</div>


<%= link_to t('.back', :default => t("helpers.links.back")),
              research_path(@research), :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_research_path(@research), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              research_path(@research),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
