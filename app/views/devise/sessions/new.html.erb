<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center"><%= t '.sign_in', default: 'Sign in' %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email', default: 'Email Address'), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password', default: 'Password'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t 'activerecord.attributes.user.remember_me', default: 'Remember me' %>
          </label>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit t('.sign_in', default: 'Sign in'), class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
