<%= simple_form_for(annotation, remote: true) do |f| %>
	<%= f.input :body, as: :trix_editor, label: false %>
	<%= f.input :category_name, input_html: { data: { autocomplete_source: research_paper_annotation_categories_path(@research, @paper) }, placeholder: @research.annotation_categories.map { |a| a.name }.join(", ") } %>
	<%= f.submit t('helpers.buttons.save', default: 'Save'), class: 'btn btn-lg btn-success' %>
<% end %>