<%= simple_form_for(annotation, remote: true) do |f| %>
	<%= f.input :body, as: :trix_editor, label: false %>
	<%= f.input :category_name, input_html: { data: { autocomplete_source: annotation_categories_path } } %>
	<%= f.submit t('helpers.buttons.save', default: 'Save'), class: 'btn btn-lg btn-success' %>
<% end %>
