<%= simple_form_for(annotation, remote: true) do |f| %>
	<%= f.input :body, as: :trix_editor, label: false, input_html: {  id: 'annotation_trix_input', data: { pasteurl: translate_research_paper_path(@research, @paper) }} %>
	<%= f.input :category_name, input_html: { data: { autocomplete_source: research_paper_annotation_categories_path(@research, @paper) } } %>
	<%= f.submit t('helpers.buttons.save', default: 'Save'), class: 'btn btn-lg btn-success' %>
<% end %>